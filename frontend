  <h2>Ramp Access Checkout</h2>

  <button onclick="checkout('car_parking')">$6 – Car Parking</button>
  <button onclick="checkout('ramp_parking')">$12 – Boat Ramp + Truck/Trailer</button>

  <script>
    async function checkout(productType) {
      const res = await fetch('https://boat-ramp-1.onrender.com', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ productType }),
      });

      const data = await res.json();
      if (data.url) {
        window.location.href = data.url;
      } else {
        alert('Checkout error. See console.');
        console.error(data);
      }
    }
  </script>
